{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/.well-known/vercel/toolbar",
      "dest": "server.js"
    },
    {
      "src": "/images",
      "dest": "server.js"
    },
    {
      "src": "/config",
      "dest": "server.js"
    },
    {
      "src": "/exif/(.*)",
      "dest": "server.js"
    },
    {
      "src": "^/$",
      "dest": "public/index.html"
    },
    {
      "src": "^/about$",
      "dest": "public/about.html"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "public/assets/$1"
    },
    {
      "src": "^/(.*)\\.(?:js|css|svg|ico)$",
      "dest": "public/$1.$2",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/(.*)",
      "dest": "public/404.html",
      "status": 404
    }
  ]
}
